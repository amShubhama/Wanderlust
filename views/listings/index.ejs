<% layout('/layouts/boilerplate') %>

    <body>
        <h3 class="mt-4">All listings</h3>
        <div class="cards-containers">
            <% for(listing of data){ %>
                <a href="/listings/<%= listing._id %>">
                    <div class="card" style="width: 18rem;">
                        <img src=<%=listing.image.image_url %> class="card-img-top" alt="...">
                        <div class="card-body">
                            <p>
                                <%= listing.title %>
                            </p>
                            <p>
                                &#8377; <%= listing.price.toLocaleString() %>/night
                            </p>
                            <p>
                                <%= listing.description %>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>