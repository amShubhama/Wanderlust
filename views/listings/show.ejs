<%- layout('layouts/boilerplate') %>

    <body>
        <div class="row offset-2">
            <div class="col-8">
                <h2 class="mt-4">
                    <%= details.title %>
                </h2>
                <ul>
                    <li>
                        <%= details.description %>
                    </li>
                    <li>
                        &#8377; <%= details.price.toLocaleString('en-IN') %>
                    </li>
                    <li>
                        <%= details.location %>
                    </li>
                    <li>
                        <%= details.country %>
                    </li>

                </ul>
                <div class="mb-3">
                    <img class="rounded" src=<%=details.image.image_url %> alt="" width="500px" >
                </div>
                <form action="/edit/<%= details._id %>">
                    <button class="btn btn-primary mb-4"><i class="fas fa-edit"></i> Edit</button>
                </form>
            </div>
        </div>
    </body>