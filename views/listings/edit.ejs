<%- layout('layouts/boilerplate') %>

    <body>
        <div class="row offset-2">
            <div class="col-8">
                <h2 class="mt-3">Edit Listing</h2>
                <form action="/listings/edit?_method=put" method="post">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" name="listing[title]" type="text" value=<%=listing.title %>>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" name="listing[description]"
                            type="text"><%=listing.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image_url">Image Url/Link</label>
                        <input class="form-control" name="listing[image_url]" type="type"
                            value=<%=listing.image.image_url %>>
                    </div>
                    <div class="row g-3">
                        <div class="mb-3 col-auto">
                            <label class="form-label" for="price">Price</label>
                            <input class="form-control" name="listing[price]" type="number" min="1" inputmode="numeric"
                                value=<%=listing.price %>>
                        </div>
                        <div class="mb-3 col-auto">
                            <label class="form-label" for="country">Country</label>
                            <input class="form-control" type="text" value=<%=listing.country %>>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" value=<%=listing.location %>>
                    </div>
                    <button class="btn btn-primary mb-4" type="submit">Save</button>
                </form>
            </div>
        </div>
    </body>