<%- layout('layouts/boilerplate') %>

    <body>
        <div class="row offset-2">
            <div class="col-8">
                <h2 class="mt-3">Edit Listing</h2>
                <form class="needs-validation" action="/listings/edit?_method=put" method="post" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" name="listing[title]" type="text" value=<%=listing.title %>
                        required>
                        <div class="invalid-feedback">Title is missing!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" name="listing[description]" required
                            type="text"><%=listing.description %></textarea>
                        <div class="invalid-feedback">Description is required!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image_url">Image Url/Link</label>
                        <input class="form-control" name="listing[image_url]" type="type" required
                            value=<%=listing.image.image_url %>>
                        <div class="invalid-feedback">Image link is missing!</div>
                    </div>
                    <div class="row g-3">
                        <div class="mb-3 col-auto">
                            <label class="form-label" for="price">Price</label>
                            <input class="form-control" name="listing[price]" type="number" min="1" inputmode="numeric"
                                required value=<%=listing.price %>>
                            <div class="invalid-feedback">Price is required!</div>
                        </div>
                        <div class="mb-3 col-auto">
                            <label class="form-label" for="country">Country</label>
                            <input class="form-control" type="text" value=<%=listing.country %> required>
                            <div class="invalid-feedback">Country name is missing!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" value=<%=listing.location %> required>
                        <div class="invalid-feedback">Location is missing!</div>
                    </div>
                    <button class="btn btn-primary mb-4" type="submit">Save</button>
                </form>
            </div>
        </div>
    </body>